@using YouTubeServices.ApplicationReferences
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @References.ApplicationName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/fontawesome/css/all.css" rel="stylesheet" />
    <link href="~/JqueryTable/jquery.dataTables.min.css.css" rel="stylesheet" />
    <link href="~/JqueryTable/dataTables.bootstrap4.min.css.css" rel="stylesheet" />
    <link href="~/css/jquery-ui.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="@References.ApplicationMainLogo" class="img-fluid" style="border-radius:10%;width:20%;height:20%" />
                </a>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @*<ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 text-center">
            <strong>@References.ApplicationName</strong> <strong>V</strong>&beta; @References.ApplicationVersion &copy; @References.ApplicationYear Developed By: <a asp-action="about" asp-controller="Home" target="_blank">@References.ApplicationDevelopedBy</a>.
            @RenderBody()
        </main>
    </div>

    
    <footer class="border-top footer text-muted">
        <div class="container">
            
        </div>
    </footer>
   <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/fontawesome/js/all.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/JqueryTable/jquery.dataTables.min.js.js"></script>
    <script src="~/js/jquery.dataTables.min.js.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/lib/vue/dist/vue.js"></script>
    <script src="~/lib/moment/moment.js"></script>

    
    <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>

    <script type="text/javascript">
        
            
    </script>



    @RenderSection("Scripts", required: false)
</body>
</html>
